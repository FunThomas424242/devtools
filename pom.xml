				<version>1.0.11</version>
			</dependency>
			<dependency>
				<groupId>info.cukes</groupId>
				<artifactId>cucumber-junit</artifactId>
				<version>1.0.11</version>
			</dependency>
			<dependency>
				<groupId>info.cukes</groupId>
				<artifactId>cucumber-picocontainer</artifactId>
				<version>1.0.11</version>
			</dependency>
			<dependency>
				<groupId>info.cukes</groupId>
				<artifactId>cucumber-scala</artifactId>
				<version>1.0.11</version>
			</dependency>
			<dependency>
				<groupId>info.cukes</groupId>
				<artifactId>cucumber-html</artifactId>
				<version>0.2.1</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<modules>
		<module>eclipseconfigurator-modul</module>
		<module>eclipseconfigurator-test</module>
		<module>eclipseconfigurator-feature</module>
		<module>updatesite</module>
	</modules>


</project>
